<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID"
         version="3.0">

    <display-name>Middle</display-name>

    <!-- CONTROLLERS -->
    <!-- product -->
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.learn.servlet.controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/product.do</url-pattern>
    </servlet-mapping>
    <!-- mock -->
    <servlet>
        <servlet-name>mockController</servlet-name>
        <servlet-class>com.learn.servlet.controller.MockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mockController</servlet-name>
        <url-pattern>/mock.do</url-pattern>
    </servlet-mapping>

    <!-- FILTERS -->
    <!-- processing time -->
    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>com.learn.servlet.filter.ProcessingTimeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- request info -->
    <filter>
        <filter-name>infoFilter</filter-name>
        <filter-class>com.learn.servlet.filter.RequestInfoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>infoFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!-- request info -->
    <filter>
        <filter-name>attributeToSessionFilter</filter-name>
        <filter-class>com.learn.servlet.filter.AddAttributesToSessionFilter</filter-class>
        <init-param>
            <param-name>filter-param-name-A</param-name>
            <param-value>filter-param-name-A</param-value>
        </init-param>
        <init-param>
            <param-name>filter-param-name-B</param-name>
            <param-value>filter-param-name-B</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>attributeToSessionFilter</filter-name>
        <servlet-name>mockController</servlet-name>
    </filter-mapping>
    
    <!--&lt;!&ndash; LISTENERS &ndash;&gt;-->
    <!--<listener>-->
        <!--<listener-class>com.learn.servlet.listener.MyHttpSession</listener-class>-->
    <!--</listener>-->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>